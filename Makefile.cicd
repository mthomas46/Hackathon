# ========================================
# CI/CD HOOKS AND INTEGRATIONS
# ========================================

ci-pre-commit: ## Run pre-commit validations
	@echo "$(BLUE)ğŸ” Running Pre-commit Validations...$(NC)"
	@if command -v pre-commit >/dev/null 2>&1; then \
		pre-commit run --all-files; \
	else \
		echo "Pre-commit not installed. Install with: pip install pre-commit"; \
		echo "Then run: pre-commit install"; \
	fi
	@echo "$(GREEN)âœ… Pre-commit validations completed$(NC)"

ci-lint: ## Run comprehensive linting
	@echo "$(BLUE)ğŸ” Running Comprehensive Linting...$(NC)"
	@echo "Python linting..."
	@find scripts/hardening -name "*.py" -exec python3 -m py_compile {} \; 2>&1 || echo "Python syntax issues found"
	@echo "YAML validation..."
	@python3 -c "import yaml; yaml.safe_load(open('docker-compose.dev.yml'))" 2>/dev/null && echo "âœ… YAML valid" || echo "âŒ YAML invalid"
	@echo "JSON validation..."
	@python3 -c "import json; json.load(open('config/standardized/port_registry.json'))" 2>/dev/null && echo "âœ… JSON valid" || echo "âŒ JSON invalid"
	@echo "$(GREEN)âœ… Linting completed$(NC)"

# Default target
.DEFAULT_GOAL := help
