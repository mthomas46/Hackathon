# Confluence Hub Service Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# CONFLUENCE CONFIGURATION
# =============================================================================

# Base URL for your Confluence instance
# For Confluence Cloud: https://your-domain.atlassian.net
# For Confluence Server/Data Center: https://your-confluence-server.com
ConfluenceBaseUrl=https://your-domain.atlassian.net

# Your Confluence username (usually your email for Cloud instances)
ConfluenceUsername=your-email@company.com

# Confluence API Token
# For Cloud: Generate from https://id.atlassian.com/manage-profile/security/api-tokens
# For Server/Data Center: Use your password or generated token
ConfluenceApiToken=your-api-token-here

# =============================================================================
# MONGODB CONFIGURATION  
# =============================================================================

# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/confluence_hub
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/confluence_hub
# For Docker container: mongodb://mongodb:27017/confluence_hub
MongoConnectionString=mongodb://localhost:27017/confluence_hub

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Service-specific overrides (optional)
# APP_CONFIG_PATH=config/app.yaml

# Logging level
# LOG_LEVEL=INFO

# =============================================================================
# NOTES
# =============================================================================

# How to get Confluence API Token:
# 1. Go to your Atlassian Account Settings
# 2. Navigate to Security â†’ API tokens  
# 3. Create a new API token
# 4. Copy the token and use it as ConfluenceApiToken

# MongoDB Database and Collection:
# - Database: confluence_hub
# - Collection: confluence_pages
# 
# The service will automatically create the database and collection
# with appropriate indexes on startup.