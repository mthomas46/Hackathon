# Local Development Environment Configuration
# Project Simulation Service - Development Environment Settings

# ============================================
# SERVICE CONFIGURATION
# ============================================

SERVICE_NAME=project-simulation
SERVICE_VERSION=1.0.0-dev
ENVIRONMENT=development

# FastAPI Configuration
HOST=0.0.0.0
PORT=5075
RELOAD=true
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite for local development (fast and easy)
DATABASE_URL=sqlite:///./data/project_simulation_dev.db

# PostgreSQL option (uncomment to use instead)
# DATABASE_URL=postgresql://postgres:password@localhost:5432/project_simulation_dev

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# ============================================
# ECOSYSTEM SERVICE URLS
# ============================================

# Local ecosystem service URLs for development
MOCK_DATA_GENERATOR_URL=http://localhost:5001
ANALYSIS_SERVICE_URL=http://localhost:5002
INTERPRETER_URL=http://localhost:5003
DOC_STORE_URL=http://localhost:5004
LLM_GATEWAY_URL=http://localhost:5005
NOTIFICATION_SERVICE_URL=http://localhost:5006
LOG_COLLECTOR_URL=http://localhost:5007
DISCOVERY_AGENT_URL=http://localhost:5008
ORCHESTRATOR_URL=http://localhost:5099
FRONTEND_URL=http://localhost:3000

# ============================================
# EXTERNAL SERVICE CONFIGURATION
# ============================================

# Ollama Configuration (for local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# ============================================
# DEVELOPMENT FEATURES
# ============================================

# Enable development features
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8081

# Hot reload and debugging
AUTO_RELOAD=true
DEBUG_MODE=true

# ============================================
# PERFORMANCE & MONITORING
# ============================================

# Development monitoring settings
ENABLE_METRICS=true
METRICS_PORT=8001
ENABLE_HEALTH_CHECKS=true

# ============================================
# SECURITY SETTINGS
# ============================================

# Development security (relaxed for ease of development)
RATE_LIMIT_ENABLED=false
JWT_SECRET=dev-secret-key-change-in-production
API_KEY=dev-api-key-change-in-production

# ============================================
# LOGGING CONFIGURATION
# ============================================

# Structured logging for development
LOG_FORMAT=json
LOG_FILE=./logs/project_simulation_dev.log
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true

# Correlation ID tracking
ENABLE_CORRELATION_ID=true

# ============================================
# FEATURE FLAGS
# ============================================

# Enable experimental features in development
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_EXTENDED_LOGGING=true
ENABLE_DETAILED_METRICS=true

# ============================================
# TESTING CONFIGURATION
# ============================================

# Test database (separate from development)
TEST_DATABASE_URL=sqlite:///./data/project_simulation_test.db

# Mock service configuration
USE_MOCK_SERVICES=false
MOCK_DATA_ENABLED=true

# ============================================
# DOCKER CONFIGURATION
# ============================================

# Docker development settings
DOCKER_IMAGE_TAG=dev
DOCKER_BUILD_CONTEXT=.
DOCKER_COMPOSE_FILE=docker-compose.dev.yml

# ============================================
# DEVELOPER TOOLS
# ============================================

# VS Code debugging
PYDEVD_ENABLE=true
PYDEVD_HOST=0.0.0.0
PYDEVD_PORT=5678

# Profiling and performance monitoring
ENABLE_PROFILING=false
PROFILING_OUTPUT_DIR=./profiling/

# ============================================
# LOCAL DATA STORAGE
# ============================================

# Local file storage for development
UPLOAD_DIR=./data/uploads/
CACHE_DIR=./data/cache/
TEMP_DIR=./data/temp/

# ============================================
# NOTIFICATIONS & ALERTS
# ============================================

# Development notification settings (console/email)
NOTIFICATION_CONSOLE=true
NOTIFICATION_EMAIL=false
EMAIL_SMTP_SERVER=localhost
EMAIL_SMTP_PORT=1025  # MailHog default port

# ============================================
# INTEGRATION SETTINGS
# ============================================

# Service mesh configuration
SERVICE_MESH_ENABLED=false
SERVICE_DISCOVERY_ENABLED=true

# Circuit breaker settings (relaxed for development)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=10
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# ============================================
# MISCELLANEOUS
# ============================================

# Development convenience settings
SKIP_AUTHENTICATION=false
ENABLE_DEMO_DATA=true
ENABLE_SWAGGER_AUTH=false

# Performance settings
MAX_WORKERS=4
MAX_CONNECTIONS=100
REQUEST_TIMEOUT=30

# Memory and resource limits (higher for development)
MEMORY_LIMIT=2GB
CPU_LIMIT=2.0
