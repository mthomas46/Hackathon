  "alerting": {
    "email_notifications": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "from_email": "health-monitor@company.com",
      "to_email": "devops@company.com",
      "username": "health-monitor@company.com",
      "password": "app_password_here"
    },
    "slack_notifications": {
      "enabled": false,
      "webhook_url": "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK",
      "channel": "#infrastructure-alerts",
      "username": "Health Monitor"
    },
    "webhook_notifications": {
      "enabled": false,
      "url": "https://your-webhook-endpoint.com/health-alerts",
      "headers": {
        "Authorization": "Bearer your-token",
        "Content-Type": "application/json"
      }
    }
  },
  "alert_rules": [
    {
      "name": "service_down",
      "condition": "status == 'unhealthy'",
      "severity": "critical",
      "threshold": 1,
      "duration_minutes": 2,
      "enabled": true
    },
    {
      "name": "high_response_time",
      "condition": "response_time > expected_response_time * 2",
      "severity": "warning", 
      "threshold": 2.0,
      "duration_minutes": 5,
      "enabled": true
    },
    {
      "name": "consecutive_failures",
      "condition": "consecutive_failures >= 3",
      "severity": "critical",
      "threshold": 3,
      "duration_minutes": 1,
      "enabled": true
    },
    {
      "name": "low_uptime",
      "condition": "uptime_percentage < 95.0",
      "severity": "warning",
      "threshold": 95.0,
      "duration_minutes": 15,
      "enabled": true
    },
    {
      "name": "critical_service_down",
      "condition": "status == 'unhealthy' AND critical == true",
      "severity": "critical",
      "threshold": 1,
      "duration_minutes": 1,
      "enabled": true
    },
    {
      "name": "service_recovery",
      "condition": "status == 'healthy' AND previous_status == 'unhealthy'",
      "severity": "info",
      "threshold": 1,
      "duration_minutes": 1,
      "enabled": true
    }
  ],
  "dashboard": {
    "refresh_interval_seconds": 10,
    "retention_days": 30,
    "show_trends": true,
    "show_response_times": true,
    "show_error_rates": true
  },
  "self_healing": {
    "enabled": false,
    "restart_unhealthy_services": false,
    "max_restart_attempts": 3,
    "restart_cooldown_minutes": 5
  }
}
